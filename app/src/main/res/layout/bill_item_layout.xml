<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/bill_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报单号:AC00120161121(资金申请单)"
                android:textColor="@color/deep_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/bill_flag"
                android:textColor="@color/deep_black"
                android:text="状态："/>

            <TextView
                android:id="@+id/bill_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审批中"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/bill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_code"
                android:text="测试12345678"/>
            <TextView
                android:id="@+id/apply_date"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_title"
                android:text="2016-11-21 10:20:1"/>
            <TextView
                android:id="@+id/apply_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bill_title"
                android:text="屠苏中工作区(屠苏北)"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>
